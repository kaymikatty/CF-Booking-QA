
<h1>Agregar Paquete</h1>
<form action="/packages/add" method="POST">
    <label>País:</label>
    <input type="text" name="pais" required>
    <label>Hotel:</label>
    <input type="text" name="hotel" required>
    <label>Precio:</label>
    <input type="number" name="precio" required>
    <label>Número de Personas:</label>
    <input type="number" name="numero_personas" required>
    <label>Fecha de Ida:</label>
    <input type="date" name="fecha_ida" required>
    <label>Fecha de Salida:</label>
    <input type="date" name="fecha_salida" required>
    <label>Actividad Recreativa:</label>
    <input type="text" name="actividad_recreativa" required>
    <button type="submit" class="btn btn-success">Agregar</button>
</form>

